
<% if current_user_is_cook %>
  <div class="">
    <h2><em>Hello <%= current_user.name %>, to add a new food, <strong><a href="/foods/new">click here.</a></strong>
    </em></h2>
  </div>
  <% @foods.each do |food| %>
    <% if session[:user_id] == food[:cook_id] %>
      <div class="index-box">
      <p> Name: <%=link_to food.name.titleize, food_url(food) %></p>
      <p><img src="<%=food.picture%>" alt="" width=75% ></p>
      <p> Description: <%= food.description.truncate(100) %>
      <em><%= link_to "see more", food_url(food) unless food.description.size<99 %></em></p>
      <p> <em> Food Rating: (future feature)<%= food.food_rating %> </em></p>
      <p> <%= link_to "Go to Food Page to Edit", food_url(food) %> </p>
      </div>
    <%end%>
  <%end%>
<% else %>
  <div class="">
    <h2><em>Today's Menu</em></h2>
  </div>
  <% @foods.each do |food| %>
    <div class="index-box">
    <p> Name: <%=link_to food.name.titleize, food_url(food) %></p>
    <p><img src="<%=food.picture%>" alt="" width=75% ></p>
    <p> Description: <%= food.description.truncate(100) %>
    <em><%= link_to "see more", food_url(food) unless food.description.size<99 %></em></p>
    <p> <em> Food Rating: (future feature)<%= food.food_rating %> </em></p>
    <p><a href="<%=food_url(food)%>">Go to food page to add to meal</a></p>
    </div>
  <%end%>
<%end%>
