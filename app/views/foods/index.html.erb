<h1>Foods#index</h1>
<div class="">
  <em>If you are a COOK, to add a new food, <strong><a href="/foods/new">click here.</a></strong>
  </em>
</div>

<% @foods.each do |food| %>
<div class="index-box">
<p> Name: <%=link_to food.name, food_url(food) %></p>
<p><img src="<%=food.picture%>" alt="" width="150px" ></p>
<p> Description: <%= food.description.truncate(100) %>
<em><%= link_to "see more", food_url(food) unless food.description.size<99 %></em></p>
<p> Food Rating: <%= food.food_rating %></p>
<p><a href="<%=food_url(food)%>">Go to food page</a></p>
</div>
<%end%>

<div class="login-box">
<%= form_for :meal, url: '/meals' do |f| %>
<h4><%= f.collection_select :food_id, Food.all, :id, :name %>
<%= f.submit "Add to Meal", class: "btn btn-primary" %></h4>
<%end%>
</div>
